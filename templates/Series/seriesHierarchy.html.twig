{% macro seriesHierarchy(series) %}
    {% import _self as list %}
    <ul>
        {% for serie in series %}
            <li>
                <a href="{{ path('series_view', {'series_id':serie.id}) }}">{{ serie.name }}</a>
                <a href="{{ path('series_delete', {'series_id':serie.id}) }}" onclick="return confirmDelete('series');"><img src="{{ asset('images/delete.png') }}" title="delete" alt="delete"></a>
                <a href="{{ path('series_edit', {'series_id':serie.id}) }}"><img src="{{ asset('images/edit.png') }}" title="edit" alt="edit"></a>
            </li>
            {% if serie.children|length > 0 %}
                {{ list.seriesHierarchy(serie.children) }}
            {% endif %}
        {% endfor %}
    </ul>
{% endmacro %}




